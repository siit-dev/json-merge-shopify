  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@types/jest": "^29.5.12",
    "@types/js-levenshtein": "^1.1.3",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "chalk": "^4.1.2",
    "glob": "^10.2.6",
    "js-levenshtein": "^1.1.6",
    "simple-git": "^3.22.0"
  },
  "peerDependencies": {
    "prettier": "*"
