  },
  "files": [
    "lib/**/*",
    "src/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/siit-dev/json-merge-shopify.git"
  },
  "keywords": [
    "json",
    "merge",
    "git",
    "shopify"
