      "import": "./lib/index.js",
      "require": "./lib/index.js"
    },
    "./lib/": "./lib/",
    "./src/": "./src/",
    "./formatter": "./lib/formatter/formatter.js",
    "./format-json": "./lib/formatter/format-json.js",
    "./merge-driver": "./lib/merge-driver/merge-driver.js",
    "./git-merger": "./lib/git-integration/git-merger.js"
